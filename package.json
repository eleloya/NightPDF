{
	"name": "NightPDF",
	"version": "0.2.1",
	"description": "Dark Mode for PDFs",
	"main": "app.js",
	"scripts": {
		"start": "electron .",
		"dist": "electron-builder"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"electron": "^8.5.2",
		"electron-builder": "^22.6.0",
		"electron-notarize": "^0.3.0"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"nouislider": "^14.5.0"
	},
	"build": {
		"appId": "io.elesoft.NightPDF",
		"productName": "NightPDF",
		"afterSign": "build/notarize.js",
		"fileAssociations": [
			{
				"ext": "pdf",
				"icon": "build/icon.icns",
				"role": "viewer",
				"isPackage": false
			}
		],
		"win": {
			"target": [
				"portable"
			],
			"icon": "build/icon.ico"
		},
		"mac": {
			"icon": "build/icon.iconset",
			"category": "public.app-category.productivity",
			"target": [
				"dmg",
				"zip",
				"mas"
			],
			"bundleVersion": "1",
			"artifactName": "NightPDF-${version}.${ext}",
			"darkModeSupport": true,
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"provisioningProfile": "./build/nightpdf.provisionprofile",
			"type": "distribution"
		},
		"mas": {
			"entitlements": "./build/entitlements.mas.plist",
			"entitlementsInherit": "./build/entitlements.mas.inherit.plist",
			"hardenedRuntime": true,
			"asarUnpack": [
				"node_modules"
			],
			"artifactName": "rocketchat-${version}-mas.${ext}"
		}
	}
}
